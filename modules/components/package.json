{
  "name": "@pasta/components",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/pawsong/pasta.git"
  },
  "version": "0.0.0",
  "description": "React components for pasta project",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "config": {
    "bin": "../../node_modules/.bin"
  },
  "scripts": {
    "prepublish": "npm run install:link && npm run install:tsd && npm run build",
    "install:link": "node ../../tools/link",
    "install:tsd": "$npm_package_config_bin/tsd install",
    "clean": "$npm_package_config_bin/rimraf lib",
    "build": "npm run clean && $npm_package_config_bin/gulp build",
    "test": "$npm_package_config_bin/gulp test",
    "test:watch": "$npm_package_config_bin/gulp test:watch"
  },
  "files": [
    "lib"
  ],
  "license": "UNLICENSED",
  "peerDependencies": {
    "react": "^0.14.7",
    "radium": "^0.16.6"
  },
  "links": [
    "../core"
  ],
  "dependencies": {
    "hoist-non-react-statics": "^1.0.5"
  }
}
